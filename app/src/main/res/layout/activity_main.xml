<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical" >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtCodigo"
                android:selectAllOnFocus="false"
                android:hint="CODIGO DE ARTICULO"
                android:singleLine="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescripcion"
                android:hint="DESCRIPCION" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtPrecio"
                android:hint="PRECIO" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INSERTAR"
                android:id="@+id/btnInsertar"
                android:onClick="alta" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONSULTAR POR CODIGO"
                android:id="@+id/btnConsult1"
                android:onClick="consultaporcodigo" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONSULTAR POR DESCRIPCION"
                android:id="@+id/btnConsul2"
                android:onClick="consultapordescripcion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ELIMINAR POR CODIGO"
                android:id="@+id/btnEliminar"
                android:onClick="eliminarPorCodigo"
                android:nestedScrollingEnabled="false" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MODIFICAR"
                android:id="@+id/btnModificar"
                android:onClick="modificacion" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>